<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tippy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="actionBarTheme">@style/ActionBar_ltr</item>
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- secondary colors -->
        <item name="colorSecondary">@color/primary_pink</item>
        <item name="colorSecondaryVariant">@color/secondary_purple</item>
        <item name="android:statusBarColor">@color/primary_purple_variant</item>
        <item name="android:colorBackground">@color/background_blue</item>
    </style>

    <style name="Theme.Tippy" parent="Base.Theme.Tippy" />

    <style name="ActionBar_ltr" parent="Base.Theme.Tippy">
        <item name="android:layoutDirection">ltr</item>
        <!-- white text in actionbar -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>